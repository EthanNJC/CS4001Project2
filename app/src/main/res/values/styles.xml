<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DataText">
        <item name="android:layout_width">@dimen/text_box_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:background">@drawable/data_text_shape</item>
    </style>

    <style name="LabelText">
        <item name="android:layout_width">62sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

</resources>
